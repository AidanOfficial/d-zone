{
	"extends": "@d-zone/common/tsconfig.json",

	"compilerOptions": {
		"module": "esnext",
		"lib": ["esnext", "dom"],
		"jsx": "preserve",
		"allowJs": false,
		"noImplicitOverride": false,
		"isolatedModules": true,

		"paths": {
			"@d-zone/web/*": ["./*", "./src/library/*"]
		}
	},

	"include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.d.ts"],
	"exclude": ["node_modules"]
}
